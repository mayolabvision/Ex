<stimulus name="dotmapping" repeats="1000" ex="ex_activeFixation" bgColor="0 0 0">
    <params type="oval" runline="frameCount xpos ypos dotrad colorR colorG colorB">
        <frameCount>20</frameCount>
        <xpos>-448:128:448</xpos>
        <ypos>-320:128:320</ypos>
        <dotrad>[64 64 64]</dotrad>
        <colorR>255</colorR>
        <colorG>255</colorG>
        <colorB>255</colorB>
    
        <nStimPerFix>11</nStimPerFix>
        <fixX>0</fixX>
        <fixY>0</fixY>
        <fixRad>5</fixRad>
        <fixColor>[0;0;255]</fixColor>
        <preStimFix>200</preStimFix>
        <interStimInterval>0</interStimInterval>
        <timeToFix>1000</timeToFix>
        <saccadeInitiate>500</saccadeInitiate>
        <saccadeTime>200</saccadeTime>
        <stayOnTarget>250</stayOnTarget>
        <saccadeLength>150</saccadeLength>
        <noFixTimeout>1000</noFixTimeout>
    </params>
    <randoms>
        <saccadeDir>0:45:315</saccadeDir>
    </randoms>
</stimulus>
